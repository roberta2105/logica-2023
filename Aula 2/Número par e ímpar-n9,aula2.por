programa
{
	
	funcao inicio()
	{
		inteiro numero,par,impar

		escreva("Digite um número: ")
		leia(numero)

		se (numero%2==0){
			escreva("Par")}
		senao{	
		   escreva("Ímpar")}
		
	}
}
